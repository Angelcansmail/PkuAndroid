<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/city_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffcd2626">
        <ImageView
            android:id="@+id/title_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/base_action_bar_back_normal"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@id/title_back"
            android:background="#A71717"/>
        <TextView
            android:id="@+id/title_current_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"
            android:textSize="22sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/city_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:orientation="horizontal"
        android:layout_below="@id/city_title">
        <EditText
            android:id="@+id/myedit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1111"
            android:hint="搜索或添加城市"
            android:layout_margin="10.0dip"
            android:drawableLeft= "@drawable/magnifying_glass"
            android:drawablePadding="8dip"
            android:singleLine="true"
            android:background ="@drawable/contact_search_box_edittext_keyword_background"
            android:textColor="#ff000000"
            android:textColorHint="#ffcccccc"
            android:textSize="15.0sp"/>
        <Button
            android:id="@+id/search_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="查询天气 " />
    </LinearLayout>
    <ListView
        android:id="@+id/city_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/city_search"/>
</RelativeLayout>
