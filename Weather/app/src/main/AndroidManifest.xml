<manifest package="com.gzh.job.weather"
          xmlns:android="http://schemas.android.com/apk/res/android">
    <!--增加网络访问权限-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--增加访问INTERNET权限-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--授予应用程序修改系统设置的权限-->
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION"/>
    <application
        android:name=".com.gzh.job.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".com.gzh.job.activity.MainActivity"
            android:configChanges="orientation"><!--设置屏幕横向android:screenOrientation="landscape"--><!--设置屏幕竖屏android:screenOrientation="portrait"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".com.gzh.job.activity.SelectCity">

        </activity>
    </application>

</manifest>
